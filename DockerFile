# Use the official Node.js image as the base image
FROM node:16

# Set working directory
WORKDIR /app

# Copy package.json and pnpm-lock.yaml to the working directory
COPY package.json pnpm-lock.yaml ./

# Install pnpm globally
RUN npm install -g pnpm

# Set Puppeteer cache and executable paths
ENV PUPPETEER_CACHE_DIR=/opt/render/.cache/puppeteer
ENV PUPPETEER_DOWNLOAD_PATH=/opt/render/.cache/puppeteer
ENV PUPPETEER_EXECUTABLE_PATH=/opt/render/.cache/puppeteer/chrome-linux/chrome

# Install dependencies and download Chromium
RUN pnpm install && npx puppeteer install --path=$PUPPETEER_DOWNLOAD_PATH

# Expose the application's port
EXPOSE 1000

# Copy the remaining application files to the working directory
COPY . .

# Start the application
CMD ["pnpm", "start"]
