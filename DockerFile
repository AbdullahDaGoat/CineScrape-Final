# Use the official Node.js image as the base image
FROM node:16

# Set working directory
WORKDIR /app

# Copy package.json and pnpm-lock.yaml to the working directory
COPY package.json pnpm-lock.yaml ./

# Install pnpm globally and dependencies (including Puppeteer's Chromium)
RUN npm install -g pnpm && pnpm install

# Install Google Chrome manually
RUN wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - && \
    echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list && \
    apt-get update && apt-get install -y google-chrome-stable && \
    rm -rf /var/lib/apt/lists/*

# Set the Puppeteer executable path to the installed Google Chrome
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable

# Ensure Puppeteer uses the right cache directory
ENV PUPPETEER_CACHE_DIR=/app/.cache/puppeteer

# Expose the application's port
EXPOSE 1000

# Copy the remaining application files to the working directory
COPY . .

# Start the application
CMD ["pnpm", "start"]
